<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.gatech.cs2340.theshadybunch.clean_water_mapping.HistoryGraphActivity"
    tools:showIn="@layout/activity_history_graph">

    <TextView
        android:id="@+id/idk"
        android:layout_width="78dp"
        android:layout_height="26dp"
        android:text="Latitude"
        android:gravity="center"
        android:layout_above="@+id/history_year"
        android:layout_alignEnd="@+id/history_latitude" />

    <EditText
        android:id="@+id/history_latitude"
        android:layout_width="82dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned"
        android:layout_below="@+id/idk"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="78dp"
        android:layout_height="26dp"
        android:text="Longitude"
        android:gravity="center"
        android:layout_above="@+id/history_longitude"
        android:layout_alignStart="@+id/history_longitude" />

    <EditText
        android:id="@+id/history_longitude"
        android:layout_width="82dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="number"
        android:layout_alignBaseline="@+id/history_year"
        android:layout_alignBottom="@+id/history_year"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="78dp"
        android:layout_height="26dp"
        android:text="Year"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/history_year" />

    <EditText
        android:id="@+id/history_year"
        android:layout_width="82dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />

    <Spinner
        android:id="@+id/virus_or_ppm"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_latitude"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <Button
        android:id="@+id/view_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Graph"
        android:layout_below="@+id/virus_or_ppm"
        android:layout_alignStart="@+id/idk"
        android:layout_marginTop="11dp" />

    <Button
        android:id="@+id/cancel_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Graph"
        android:layout_above="@+id/display_graph"
        android:layout_toEndOf="@+id/textView8" />

    <Button
        android:id="@+id/display_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_graph"
        android:layout_marginTop="14dp"
        android:layout_toStartOf="@+id/cancel_graph"
        android:text="Show Graph"
        android:visibility="invisible"/>




</RelativeLayout>
