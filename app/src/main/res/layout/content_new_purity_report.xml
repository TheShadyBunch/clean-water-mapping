<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.gatech.cs2340.theshadybunch.clean_water_mapping.newPurityReport"
    tools:showIn="@layout/activity_new_purity_report">

    <EditText
        android:id="@+id/purity_longitude"
        android:layout_width="105dp"
        android:layout_height="39dp"
        android:inputType="numberDecimal|numberSigned"
        android:ems="10"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="48dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="99dp"
        android:layout_height="22dp"
        android:text="Enter Latitude"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/purity_latitude"
        android:layout_width="105dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="127dp"
        android:layout_above="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/biuhuih"
        android:layout_width="99dp"
        android:layout_height="22dp"
        android:text="Enter Longitude"
        tools:layout_editor_absoluteY="98dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_above="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp"
        android:layout_alignEnd="@+id/overall_condition" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overall Water Condition"
        tools:layout_editor_absoluteY="176dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginBottom="9dp"
        android:layout_above="@+id/overall_condition"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/overall_condition"
        android:layout_width="180dp"
        android:layout_height="25dp"
        tools:layout_editor_absoluteY="207dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/virus_ppm"
        android:layout_alignEnd="@+id/cancel_purity"
        android:layout_marginEnd="110dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Virus PPM"
        tools:layout_editor_absoluteY="247dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/virus_ppm"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/virus_ppm"
        android:layout_width="76dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="285dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/textView15"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contaminant PPM"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="337dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/c_ppm"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/c_ppm"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="364dp"
        android:layout_above="@+id/submit_purity"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp" />

    <Button
        android:id="@+id/submit_purity"
        android:layout_width="137dp"
        android:layout_height="49dp"
        android:text="Submit Purity Report"
        tools:layout_editor_absoluteY="446dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/cancel_purity"
        android:layout_width="134dp"
        android:layout_height="45dp"
        android:text="Cancel Report"
        tools:layout_editor_absoluteY="447dp"
        tools:layout_editor_absoluteX="164dp"
        android:layout_alignBottom="@+id/submit_purity"
        android:layout_toEndOf="@+id/submit_purity" />
</RelativeLayout>


